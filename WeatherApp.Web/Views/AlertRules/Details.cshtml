@model WeatherApp.Web.ViewModels.AlertRuleViewModel

@{
    ViewData["Title"] = "Alert Rule Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Alert Rule Details</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title">@Model.LocationName</h5>
        <p class="card-text">
            <strong>Min Temp (°C):</strong> @Model.MinTempC <br />
            <strong>Max Temp (°C):</strong> @Model.MaxTempC <br />
            <strong>Max Wind (m/s):</strong> @Model.MaxWindMs <br />
            <strong>Min UV Index:</strong> @Model.MinUvIndex <br />
            <strong>Min Rain Prob (%):</strong> @Model.MinRainProb <br />
            <strong>Active:</strong> @(Model.IsActive ? "Yes" : "No")
        </p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
