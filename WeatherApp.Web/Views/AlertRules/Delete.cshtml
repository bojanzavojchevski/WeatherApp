@model WeatherApp.Web.ViewModels.AlertRuleViewModel

@{
    ViewData["Title"] = "Delete Alert Rule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-danger">Delete Alert Rule</h1>

<div class="alert alert-warning">
    <strong>Are you sure?</strong> This action cannot be undone.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.LocationName</h5>
        <p class="card-text">
            <strong>Min Temp (°C):</strong> @Model.MinTempC <br />
            <strong>Max Temp (°C):</strong> @Model.MaxTempC <br />
            <strong>Max Wind (m/s):</strong> @Model.MaxWindMs <br />
            <strong>Min UV Index:</strong> @Model.MinUvIndex <br />
            <strong>Min Rain Prob (%):</strong> @Model.MinRainProb <br />
            <strong>Active:</strong> @(Model.IsActive ? "Yes" : "No")
        </p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Confirm Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
