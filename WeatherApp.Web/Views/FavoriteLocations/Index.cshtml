@model IEnumerable<WeatherApp.Domain.DomainModels.FavoriteLocation>

@{
    ViewData["Title"] = "My Favorite Locations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>No favorite locations yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Location Name</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Location?.Name</td>
                    <td>@item.Location?.Latitude</td>
                    <td>@item.Location?.Longitude</td>
                    <td>
                        <form asp-action="Delete" asp-controller="FavoriteLocations" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
