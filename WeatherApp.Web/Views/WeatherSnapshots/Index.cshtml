@model IEnumerable<WeatherApp.Domain.DomainModels.WeatherSnapshot>

@{
    ViewData["Title"] = "Weather Snapshots";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Weather Snapshots</h1>

@if (TempData["AlertMessages"] is string alertString && !string.IsNullOrWhiteSpace(alertString))
{
    var alerts = alertString.Split("<br/>", StringSplitOptions.RemoveEmptyEntries);

    <div class="alert alert-warning shadow-sm border-0 rounded">
        <h5 class="mb-2">
            <i class="bi bi-exclamation-triangle-fill text-warning"></i> Alerts Triggered
        </h5>
        <ul class="list-unstyled mb-0">
            @foreach (var msg in alerts)
            {
                <li class="mb-1">
                    <i class="bi bi-dot text-danger"></i> @Html.Raw(msg)
                </li>
            }
        </ul>
    </div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Snapshot
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No snapshots available.</div>
}
else
{
    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Date/Time</th>
                    <th>Temperature (°C)</th>
                    <th>Humidity (%)</th>
                    <th>Wind (m/s)</th>
                    <th>UV Index</th>
                    <th>Rain Probability (%)</th>
                    <th>Location</th>
                    <th style="width: 180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TakenAt.ToString("g")</td>
                        <td>@item.TemperatureC</td>
                        <td>@item.HumidityPercent</td>
                        <td>@item.WindSpeedMs</td>
                        <td>N/A</td>
                        <td>N/A</td>
                        <td>@item.Location?.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                 Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                                 Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                 Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
