@model WeatherApp.Domain.DomainModels.WeatherSnapshot

@{
    ViewData["Title"] = "Delete Snapshot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Snapshot</h1>
<hr />

<h5>Are you sure you want to delete this snapshot?</h5>

<div class="card shadow-sm p-3 mb-4">
    <dl class="row">
        <dt class="col-sm-4">Date/Time Taken</dt>
        <dd class="col-sm-8">@Model.TakenAt</dd>

        <dt class="col-sm-4">Temperature (°C)</dt>
        <dd class="col-sm-8">@Model.TemperatureC</dd>

        <dt class="col-sm-4">Humidity (%)</dt>
        <dd class="col-sm-8">@Model.HumidityPercent</dd>

        <dt class="col-sm-4">Wind Speed (m/s)</dt>
        <dd class="col-sm-8">@Model.WindSpeedMs</dd>

        <dt class="col-sm-4">UV Index</dt>
        <dd class="col-sm-8">@Model.UvIndex</dd>

        <dt class="col-sm-4">Rain Probability (%)</dt>
        <dd class="col-sm-8">@Model.RainProbability</dd>

        <dt class="col-sm-4">Location</dt>
        <dd class="col-sm-8">@Model.Location?.Name</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
