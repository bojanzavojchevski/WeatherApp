@model WeatherApp.Web.DTOs.OpenWeatherResponseDto
@{
    ViewData["Title"] = $"Weather in {ViewBag.City}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-body text-center">
                    <h2 class="mb-4">Weather in <span class="text-primary">@ViewBag.City</span></h2>

                    <h4 class="text-muted mb-3">
                        @(Model.Weather?.FirstOrDefault()?.Description ?? "No description")
                    </h4>

                    <p class="display-6 fw-bold mb-4">
                        @Model.Main.Temp.ToString("0.0") °C
                    </p>

                    <div class="row text-start">
                        <div class="col-6">
                            <p><strong>Feels Like:</strong> @Model.Main.FeelsLike.ToString("0.0") °C</p>
                            <p><strong>Humidity:</strong> @Model.Main.Humidity %</p>
                        </div>
                        <div class="col-6">
                            <p><strong>Wind Speed:</strong> @Model.Wind.Speed.ToString("0.0") m/s</p>
                            <p><strong>Pressure:</strong> @Model.Main.Pressure hPa</p>
                        </div>
                    </div>

                    @if (Model.Rain?.OneHour != null)
                    {
                        <p class="mt-3"><strong>Rain (last hour):</strong> @Model.Rain.OneHour mm</p>
                    }

                    <div class="mt-4">
                        <a asp-action="FetchWeather" class="btn btn-outline-primary">🔍 Search Again</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">⬅ Back to Snapshots</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>